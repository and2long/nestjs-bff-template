# Postgres connection string (Neon 或本地 Postgres 都可)
DATABASE_URL=postgres://user:password@host:port/database
# Optional pool size override
# DATABASE_POOL_MAX=10

# JWT secret used for signing tokens
JWT_SECRET=replace-me

# Optional token TTL overrides (accept seconds or ms-style strings like "30m")
# JWT_ACCESS_TTL=30m
# JWT_REFRESH_TTL=15d

# Apple IAP verification
APP_BUNDLE_ID=com.example.app
APP_APPLE_ID=1234567890

# Google Play (Android) purchase verification
GOOGLE_PLAY_PACKAGE_NAME=com.example.app
# 配置邮箱和私钥（私钥中的换行用 \n 转义）
GOOGLE_PLAY_CLIENT_EMAIL=play-api@your-project.iam.gserviceaccount.com
GOOGLE_PLAY_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n

# App port (defaults to 3000 if unset)
# PORT=3000
